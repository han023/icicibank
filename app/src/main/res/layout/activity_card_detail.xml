<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        tools:context=".CardDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ImageView
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:src="@drawable/logoici" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="50sp"
            android:layout_margin="10sp"
            android:padding="20sp"
            app:cardCornerRadius="10sp"
            android:layout_height="wrap_content">


        <LinearLayout
            android:padding="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Verify card details"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="Debit Card No"/>


                <ImageView
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:src="@drawable/star"
                    app:tint="@color/red" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20sp"
                android:elevation="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/deb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="xxxx/xxxx/xxxx/xxxx"
                    android:maxLength="19"
                    android:padding="2dp"
                    android:background="@color/grey" />

<!--                <EditText-->
<!--                    android:inputType="number"-->
<!--                    android:id="@+id/deb"-->
<!--                    android:maxLength="19"-->
<!--                    android:hint="xxxx/xxxx/xxxx/xxxx"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="30sp"-->
<!--                    android:background="@color/grey"-->
<!--                    />-->

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="Expiry Date:"/>


                <ImageView
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:src="@drawable/star"
                    app:tint="@color/red" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="50sp"
                    app:cardCornerRadius="20sp"
                    android:elevation="20dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/mon"
                        android:layout_width="50sp"
                        android:layout_height="30sp"
                        android:background="@color/grey"
                        android:hint="MM"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20sp"
                    android:text="/"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20sp"
                    android:elevation="20dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/year"
                        android:layout_width="50sp"
                        android:layout_height="30sp"
                        android:background="@color/grey"
                        android:hint="YY"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>







            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="CVV:"/>


                <ImageView
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:src="@drawable/star"
                    app:tint="@color/red" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="100sp"
                app:cardCornerRadius="20sp"
                android:elevation="20dp"
                android:layout_height="wrap_content">


                <EditText
                    android:inputType="numberPassword"
                    android:id="@+id/cvv"
                    android:maxLength="3"
                    android:hint="xxx"
                    android:textAlignment="center"
                    android:layout_width="100sp"
                    android:layout_height="30sp"
                    android:background="@color/grey"
                    />

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <Button
                android:id="@+id/sub"
                android:layout_width="150sp"
                android:layout_height="40sp"
                android:background="@drawable/button_box"
                android:text="Submit"
                tools:ignore="TouchTargetSizeCheck" />


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>


        </LinearLayout>




        </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textSize="11sp"
                android:text="Safe Banking never share your User ID, Password or any other information with anyone on phone, SMS or Email, ICICI Bank does not call/ email cutomer for such information Beware of fraudsters asking such details posing as Bank staff."/>




        </LinearLayout>

    </ScrollView>
</layout>