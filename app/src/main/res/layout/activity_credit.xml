<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        tools:context=".CreditActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageView
                android:layout_width="120sp"
                android:layout_height="80sp"
                android:src="@drawable/logoici" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="50sp"
            android:layout_margin="10sp"
            android:padding="20sp"
            app:cardCornerRadius="10sp"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Verify your details"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="Pan Card Number"/>


                <ImageView
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:src="@drawable/star"
                    app:tint="@color/red" />


            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20sp"
                android:elevation="20dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/pan"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/grey"
                    />

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:text="Account Number"/>


                <ImageView
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:src="@drawable/star"
                    app:tint="@color/red"/>


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20sp"
                android:elevation="20dp"
                android:layout_height="wrap_content">


                <EditText
                    android:inputType="number"
                    android:id="@+id/acc"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/grey"
                    />

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <Button
                android:id="@+id/sub"
                android:layout_width="150sp"
                android:text="Submit"
                android:background="@drawable/button_box"
                android:layout_height="40sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

        </LinearLayout>




        </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textSize="11sp"
                android:text="Safe Banking never share your User ID, Password or any other information with anyone on phone, SMS or Email, ICICI Bank does not call/ email cutomer for such information Beware of fraudsters asking such details posing as Bank staff."/>



        </LinearLayout>

    </ScrollView>
</layout>