<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120sp"
                android:layout_height="80sp"
                android:src="@drawable/logoici" />


            <LinearLayout
                android:padding="3sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                tools:ignore="ExtraText">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to ICICI Bank fast secure online reward app here you can complete your reward  within 2 minutes"
                    />


            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="50sp"
                android:layout_margin="10sp"
                android:padding="20sp"
                app:cardCornerRadius="10sp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/lock"
                            android:layout_height="30sp"
                            android:layout_width="30sp"
                            app:tint="@color/orange"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:text="Login to Internet Banking"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:text="Registered Mobile Number"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20sp"
                        android:elevation="20dp"
                        android:layout_height="wrap_content">


                        <EditText
                            android:inputType="number"
                            android:id="@+id/number"
                            android:maxLength="11"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:background="@color/grey"
                            />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>


                    <TextView
                        android:id="@+id/atmtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:text="ATM PIN"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/atmcard"
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="20sp"
                        android:elevation="20dp"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/atm"
                            android:layout_width="80sp"
                            android:layout_height="30sp"
                            android:background="@color/grey"
                            android:inputType="numberPassword"
                            android:maxLength="4" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>




                        <Button
                            android:id="@+id/auth"
                            android:layout_width="150sp"
                            android:text="Authenticate"
                            android:background="@drawable/button_box"
                            android:layout_height="40sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5sp"/>


                    <LinearLayout
                        android:id="@+id/l1"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:background="@color/grey"
                            android:layout_height="1sp"/>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="100sp"
                            android:backgroundTint="@color/blue">

                            <TextView
                                android:inputType="number"
                                android:layout_margin="5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:text="Or"
                                />

                        </androidx.cardview.widget.CardView>




                        <View
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:layout_height="1sp"/>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="User ID"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/usercard"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20sp"
                        android:visibility="gone"
                        android:elevation="20dp"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/usertxt"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:maxLength="50"
                            android:background="@color/grey"
                            />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>

                    <TextView
                        android:id="@+id/passtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="Password"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="20sp"
                        android:elevation="20dp"
                        android:id="@+id/passcard"
                        android:visibility="gone"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/pass"
                            android:inputType="numberPassword"
                            android:maxLength="20"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:background="@color/grey"
                            />

                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10sp"/>

                    <Button
                        android:id="@+id/sub"
                        android:layout_width="150sp"
                        android:visibility="gone"
                        android:text="Submit"
                        android:background="@drawable/button_box"
                        android:layout_height="40sp"/>


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="1sp"/>

                    <Button
                        android:id="@+id/userid"
                        android:layout_width="wrap_content"
                        android:text="Login with UserId"
                        android:textSize="15sp"
                        android:background="@drawable/button_box"
                        android:layout_height="40sp"/>

<!--                    <TextView-->
<!--                        android:id="@+id/userid"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="15sp"-->
<!--                        android:textStyle="bold"-->
<!--                        android:text="Login with UserId"/>-->


                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:textSize="11sp"
                android:text="Safe Banking never share your User ID, Password or any other information with anyone on phone, SMS or Email, ICICI Bank does not call/ email cutomer for such information Beware of fraudsters asking such details posing as Bank staff."/>




        </LinearLayout>
    </ScrollView>
</layout>